<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="#99000000"
    tools:context=".ApScreenFragment">

        <TextView
            android:id="@+id/statusLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#11ccff"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/statusAltitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:lines="1"
                    android:textColor="#11ccff"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/statusSpeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:lines="1"
                    android:textColor="#11ccff"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/statusLastFix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:gravity="end"
                    android:textColor="#11ccff"
                    android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/statusFlightMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#11ccff"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/statusLandingZone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="#11ccff"
                    android:textSize="13sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/statusBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#666666"
            android:textSize="13sp"
            android:text=""/>

</LinearLayout>
