<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="#99000000"
    tools:context=".ApScreenFragment">

        <TextView
            android:id="@+id/statusLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#11ccff"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/statusAltitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#11ccff"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/statusLastFix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#11ccff"
                    android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/statusLandingZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#11ccff"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/statusBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="BT"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/button_ap"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:text="AP"/>

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/button_rl"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:text="RC"/>

        </LinearLayout>

</LinearLayout>
