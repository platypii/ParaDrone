<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="340dp">

        <fragment
            android:id="@+id/map"
            android:name="ws.baseline.autopilot.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="340dp" />

        <Button
            android:id="@+id/set_landing_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_crosshair"
            android:text="LZ"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/crosshair_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_crosshair"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <fragment
        android:id="@+id/status"
        android:name="ws.baseline.autopilot.StatusFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
