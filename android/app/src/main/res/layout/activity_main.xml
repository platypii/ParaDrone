<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <fragment
            android:id="@+id/map"
            android:name="ws.baseline.autopilot.map.DroneMap"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <fragment
            android:id="@+id/ap_screen"
            android:name="ws.baseline.autopilot.ApScreenFragment"
            android:layout_margin="8dp"
            android:layout_width="180dp"
            android:layout_height="90dp" />

        <Button
            android:id="@+id/set_landing_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ¢ LZ"
            android:background="#77000000"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/landing_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_marginTop="180dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <fragment
        android:id="@+id/status"
        android:name="ws.baseline.autopilot.StatusFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
