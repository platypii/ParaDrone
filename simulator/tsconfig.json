{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext", // UMD needed for tests (node)
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "sourceRoot": "/ts",
    "baseUrl": ".",
    "pretty": true, // Pretty print errors on console
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true, // TODO: stricter
    "outDir": "js",
    "lib": ["es6", "dom"],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@platypii"
    ]
  },
  "include": [
    "ts"
  ]
}
