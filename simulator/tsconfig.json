{
  "compilerOptions": {
    "target": "es6",
    "module": "umd", // UMD needed for tests (node), AMD needed for outFile
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "/js",
    "rootDirs": ["js"],
    "baseUrl": ".",
    "pretty": true, // Pretty print errors on console
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    // "noUnusedLocals": true, // TODO: stricter
    // "noUnusedParameters": true, // TODO: stricter
    "outDir": "js",
    // "outFile": "js/main.js",
    "lib": ["es6", "dom"],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@platypii"
    ]
  },
  "include": [
    "ts"
  ]
}
